@using CarTracker.WebMvcApp.ViewModels
@model IEnumerable<CarTracker.WebMvcApp.Entities.Car>

<h1>Cars</h1>
<table>
    <thead>
        <tr>
            <td>Id</td>
            <td>Model</td>
            <td>Nickname</td>
            <td>Color</td>
            <td>Brand</td>
            <td>Bought Time</td>
            <td>Fuel Type</td>
            <td>Owner</td>
            <td>Akce</td>
        </tr>
    </thead>
    <tbody>

        @foreach (var cars in Model)
        {
            <tr>
                <td>@cars.Id</td>
                <td>@cars.Model</td>
                <td>@cars.Nickname</td>
                <td>@cars.Color</td>
                <td>@cars.Brand</td>
                <td>@cars.BoughtTime</td>
                <td>@cars.FuelType</td>
                <td>@cars.OwnerUsername</td>
                <td>
                    @* @if (User.IsInRole(Admin))
                    {
                        <a asp-area="" class="action" asp-controller="" asp-action="Edit">Upravit</a>
                        <a asp-area="" class="action" asp-controller="" asp-action="Delete">Smazat</a>

                    } *@
                </td>
            </tr>	
        }
    </tbody>
</table>